{
  "buildCommand": "npm run build && pip install -r requirements.txt",
  "devCommand": "npm run dev",
  "installCommand": "npm install && pip install -r requirements.txt",
  "builds": [
    {
      "src": "DjangoApp/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "DjangoApp/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "DjangoApp/wsgi.py"
    }
  ],
  "env": {
    "DEBUG": "False"
  }
}
