{
  "builds": [
    {
      "src": "backend/requirements.txt",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd frontend && npm run build",
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/DjangoApp/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ]
}